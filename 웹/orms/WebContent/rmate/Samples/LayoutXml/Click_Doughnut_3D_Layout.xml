<?xml version="1.0" encoding="utf-8"?>
<rMateChart backgroundColor="0xFFFFFF" cornerRadius="12" borderStyle="solid">
	<Options>
		<Caption text="Annual Report"/>
		<SubCaption text="2008"/>
	</Options>
	<Pie3DChart id="chart" innerRadius="0.3" showDataTips="true" explodable="true" width="100%" height="100%">
	<!-- explodable : True로 설정하면 도넛차트를 클릭하였을 때 클릭된 조각이  밖으로 나오게 합니다 -->
		<series>
			<Pie3DSeries nameField="Month" field="Profit" labelPosition="inside" >
				<showDataEffect>
					<SeriesZoom/>
				</showDataEffect>
			</Pie3DSeries>
		</series>
	</Pie3DChart>
</rMateChart>