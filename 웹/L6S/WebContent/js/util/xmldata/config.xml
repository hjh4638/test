<?xml version = "1.0" encoding = "utf-8"?>
<!--
	allowDomain : 접근 허용 도메인
	uploadUrl : 업로드 처리 URL
	limitSize : 허용 최대 파일 사이즈
	fileTypeName : 파일 형식에 보여질 텍스트
	allowFileType : 업로드 허용 가능 파일 타입 지정( *.jpg, *.gif 형식으로 추가 )

	예) 이미지 파일만 가능하게.
	<fileTypeName>이미지 파일</fileTypeName>
	<allowFileType>
		<fileType>*.jpg</fileType>
		<fileType>*.gif</fileType>
		<fileType>*.bmp</fileType>
	</allowFileType>

	notAllowFileType : 업로드 제한 파일 타입 지정( allowFileType 과 같은 형식으로 지정 )
-->
<config>
	<allowDomain></allowDomain>
	<uploadUrl>/lsms/main/upload.do</uploadUrl>
	<updateUrl>/lsms/main/upload.do</updateUrl>
	<limitSize unit = "mb">50</limitSize>
	<fileTypeName>office document</fileTypeName>
	<allowFileType>
		<fileType>*.hwp</fileType>
		<fileType>*.show</fileType>
		<fileType>*.doc</fileType>
		<fileType>*.docx</fileType>
		<fileType>*.ppt</fileType>
		<fileType>*.pptx</fileType>
		<fileType>*.xls</fileType>
		<fileType>*.pdf</fileType>
		<fileType>*.txt</fileType>
		<fileType>*.jpg</fileType>
		<fileType>*.JPG</fileType>
		<fileType>*.gif</fileType>
		<fileType>*.GIF</fileType>
		<fileType>*.gux</fileType>
		<fileType>*.hox</fileType>
		<fileType>*.xlsx</fileType>
		<fileType>*.nxl</fileType>
		<fileType>*.hpt</fileType>
		<fileType>*.vsd</fileType>
	</allowFileType>
	<notAllowFileType>
		<fileType>*.jsp</fileType>
		<fileType>*.php</fileType>
		<fileType>*.html</fileType>
		<fileType>*.sqljsp</fileType>		
	</notAllowFileType>
</config>	